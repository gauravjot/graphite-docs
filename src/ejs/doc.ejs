<!DOCTYPE html>
<html>
	<head>
		<title><%=title %> | Graphite Docs</title>
		<%- include ('./partials/head.ejs') %>
	</head>
	<body>
		<%- include ('./partials/nav.ejs') %> <%- include ('./partials/sidebar.ejs') %>
		<div class="h-[calc(100%-4rem)] ml-80 mt-16" id="content">
			<div class="container">
				<div class="pt-px mb-8">
					<!-- Content starts -->
					<div class="text-gray-500 dark:text-gray-400 my-6">
						Last updated - <%= new Date(date).toDateString() %>, <%= new
						Date(date).toLocaleTimeString() %>
					</div>
					<h1><%= title %></h1>
					<p class="text-lg leading-8"><%= description %></p>
					<div id="md-content"><%- post %></div>
					<!-- Content ends -->
				</div>
			</div>
		</div>
		<script src="/js/script.js"></script>
	</body>
</html>
