<!DOCTYPE html>
<html>
	<head>
		<title><%=title %> | Graphite Docs</title>
		<%- include ('./partials/head.ejs') %>
	</head>
	<body>
		<%- include ('./partials/nav.ejs') %>
		<div class="container">
			<%- include ('./partials/sidebar.ejs') %>
			<div
				class="h-[calc(100%-4rem)] ml-80 mt-16 flex flex-col lg:flex-row md:gap-10 lg:gap-20"
				id="content"
			>
				<div class="pt-px mb-8 flex-1 order-2" id="md-content">
					<!-- Content starts -->
					<div class="text-zinc-500 dark:text-zinc-400 my-6">
						Last updated - <%= new Date(date).toDateString() %>, <%= new
						Date(date).toLocaleTimeString() %>
					</div>
					<h1><%= title %></h1>
					<p class="text-base font-medium dark:!text-zinc-200 leading-8">
						<%= description %>
					</p>
					<div><%- post %></div>
					<!-- Content ends -->
				</div>
				<!-- Table of Contents starts -->
				<div
					class="flex-1 md:flex-initial order-1 lg:order-3 lg:sticky lg:max-h-[calc(100vh-4rem)] lg:top-16 lg:w-56"
				>
					<div
						class="border dark:border-zinc-900 rounded-md p-3 pt-4 lg:p-0 lg:border-none mt-10"
					>
						<div
							class="font-medium text-sm text-zinc-700 dark:text-zinc-300 mb-4"
						>
							TABLE OF CONTENTS
						</div>

						<ul id="toc"></ul>
					</div>
				</div>
				<!-- Table of Contents ends -->
			</div>
		</div>
		<script src="/js/script.js"></script>
	</body>
</html>
