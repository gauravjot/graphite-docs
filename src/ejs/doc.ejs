<!DOCTYPE html>
<html>
	<head>
		<title><%=title %> | Graphite Docs</title>
		<%- include ('./partials/head.ejs') %>
	</head>
	<body>
		<%- include ('./partials/nav.ejs') %>
		<div class="container">
			<%- include ('./partials/sidebar.ejs') %>
			<div
				class="h-[calc(100%-4rem)] sidebar-open mt-16 flex flex-col lg:flex-row md:gap-6 lg:gap-8 xl:gap-12 2xl:gap-16"
				id="content"
			>
				<div class="pt-px mb-8 flex-1 order-2 @container/doc" id="md-content">
					<!-- Content starts -->
					<div class="text-zinc-500 dark:text-zinc-400 mt-8">
						Last updated - <%= new Date(date).toDateString() %>, <%= new
						Date(date).toLocaleTimeString() %>
					</div>
					<h1><%= title %></h1>
					<p class="text-base font-medium dark:!text-zinc-200 leading-8">
						<%= description %>
					</p>
					<div><%- post %></div>
					<div class="grid @xl/doc:grid-cols-2 gap-8 mb-4 mt-20">
						<div class="col-span-1">
							<% if(prev){ %>
							<a
								href="<%= prev %>"
								class="block border hover:bg-primary-100 hover:dark:bg-primary-600/10 border-primary-600 dark:border-primary-600/80 rounded-md shadow px-4 py-3 hover:no-underline"
							>
								<div
									class="font-medium text-zinc-700 dark:text-zinc-300 text-sm mb-2"
								>
									Previous
								</div>
								<div class="font-medium"><%= prevTitle %></div></a
							>
							<% } %>
						</div>
						<div class="col-span-1">
							<% if(next){ %>
							<a
								href="<%= next %>"
								class="block border hover:bg-primary-100 hover:dark:bg-primary-600/10 text-right border-primary-600 dark:border-primary-600/80 rounded-md shadow px-4 py-3 hover:no-underline"
							>
								<div
									class="font-medium text-zinc-700 dark:text-zinc-300 text-sm mb-2"
								>
									Next
								</div>
								<div class="font-medium"><%= nextTitle %></div>
							</a>
							<% } %>
						</div>
					</div>
					<!-- Content ends -->
				</div>
				<!-- Table of Contents starts -->
				<div
					class="flex-1 md:flex-initial order-1 lg:order-3 lg:sticky lg:max-h-[calc(100vh-4rem)] lg:overflow-auto lg:top-16 lg:w-56"
				>
					<div
						class="border dark:border-zinc-900 rounded-md p-3 pt-4 lg:p-0 lg:border-none mt-8"
					>
						<div
							class="font-medium text-sm text-zinc-700 dark:text-zinc-300 mb-4"
						>
							TABLE OF CONTENTS
						</div>

						<ul id="toc"></ul>
					</div>
				</div>
				<!-- Table of Contents ends -->
			</div>
		</div>
		<%- include ('./partials/footer.ejs') %>
	</body>
</html>
