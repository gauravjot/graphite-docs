<meta charset="utf-8" />
<meta name="theme-color" content="#000000" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta
	name="robots"
	content="follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large"
/>
<link rel="icon" href="<%= config.meta.favicon %>" type="image/x-icon" />
<link rel="icon" href="<%= config.meta.app_icon %>" type="image/svg+xml" />
<link rel="stylesheet" href="/pd-static/styles.css" />

<!-- Include Links -->
<% for(var i=0; i < config.links.length; i++) { %> <%- config.links[i] %> <% } %>

<script>
	// IMPORTANT: keep this here
	// Light and dark theme
	if (
		window.matchMedia &&
		window.matchMedia("(prefers-color-scheme: dark)").matches &&
		localStorage.getItem("theme") !== "light"
	) {
		document.querySelector("html").classList.add("dark");
		localStorage.setItem("theme", "dark");
	}
	function toggleTheme() {
		document.querySelector("html").classList.toggle("dark");
		localStorage.setItem(
			"theme",
			document.querySelector("html").classList.contains("dark") ? "dark" : "light",
		);
	}
</script>
